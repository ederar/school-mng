{% extends 'admin/admin_base.html.twig' %}

{% block title %}Mark index{% endblock %}

{% block body %}
    <div class="container my-5">
            <h1 class="text-center mb-5">Marks Manager</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Student</th>
                <th>ExamOne</th>
                <th>ExamTwo</th>
                <th>Matiere</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mark in marks %}
            <tr>
                <td>{{ mark.firstname }} {{ mark.lastname }}</td>
                <td>{{ mark.examone }}</td>
                <td>{{ mark.examtwo }}</td>
                <td>{{ mark.matiere }}</td>
                <td>
                    <a href="{{ path('mark_show', {'id': mark.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('mark_edit', {'id': mark.id}) }}" class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mark_new') }}">Create new</a>
    </div>
{% endblock %}
