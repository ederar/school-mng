{% extends "admin/admin_base.html.twig" %}

{% block body %}

<div class="container mb-5">
<h1 class="text-center my-5">Teachers</h1>
<a href="{{path('admin_add_teacher')}}" class="btn btn-info mb-2">Add New Teacher</a>
    <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name </th>
      <th scope="col">Matiere</th>
      <th scope="col">ClassRoom</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {% for teacher in teachers %}
    <tr class="table-active">
        <th scope="row">{{teacher.id}}</th>
        <td>{{teacher.name}}</td>
        <td>{{teacher.lastname}}</td>
        <td>{{teacher.matiere}}</td>
        <td>{{teacher.classroom}}</td>
        <td>
        <a href="{{path('admin_edit_teacher', {'id': teacher.id})}}" class="btn btn-info">Edit</a>
        <a href="" class="btn btn-danger">Delete</a>
        </td>
    </tr>
    {% endfor %}
 </tbody>
</table>


<div class="d-flex justify-content-center">
  <ul class="pagination">
    <li class="page-item {% if page == 1 %} disabled {% endif %}">
      <a class="page-link" href="{{path('admin_teachers', {"page": page - 1})}}">&laquo;</a>
    </li>
    {% for i in 1..pages  %}
            <li class="page-item {% if page == i %} active {% endif %}">
                <a class="page-link" href="{{path('admin_teachers', {"page": i})}}">{{i}}</a>
            </li>
    {% endfor %}
    <li class="page-item {% if page == pages %} disabled {% endif %}">
      <a class="page-link" href="{{path('admin_teachers', {"page": page + 1})}}">&raquo;</a>
    </li>
  </ul>
</div>

</div>
{% endblock %}

