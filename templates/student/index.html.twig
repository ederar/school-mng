{% extends 'student/base.html.twig' %}

{% block title %}Student Login{% endblock %}

{% block body %}
       <div class="container">
    <div class="teacher-login my-5">
          <h1 class="text-center mb-5">Student Login</h1>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <form action="" method="POST">
                        <div class="form-group">
                            <label for="">Email</label>
                            <input type="email" name="_username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="">Password</label>
                            <input type="password" name="_password" class="form-control">
                        </div>
                        <div class="form-group">
                        <button type="submit" class="btn btn-info">Login</button>
                        </div>
                    </form>
                </div>
            </div>
    </div>
   </div>
{% endblock %}

