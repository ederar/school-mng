{% extends 'admin/admin_base.html.twig' %}

{% block title %}ClassRoom Manager{% endblock %}

{% block body %}
    <h1 class="my-5 text-center">ClassRoom Manager</h1>

   <div class="container mb-5">
     <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Section</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for class_room in class_rooms %}
            <tr class="table-active">
                <th>{{ class_room.id }}</th>
                <td>{{ class_room.title }}</td>
                <td>{{ class_room.section }}</td>
                <td style="width:300px;">
                    <a href="{{ path('class_room_show', {'id': class_room.id}) }}" class="btn btn-info">Show</a>
                    <a href="{{ path('class_room_edit', {'id': class_room.id}) }}" class="btn btn-primary">Edit</a>
                    <a href="{{ path('class_room_delete', {'id': class_room.id}) }}" class="btn btn-danger" onclick="confirm('Are You Sure')">Delete</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('class_room_new') }}" class="btn btn-info">Create new</a>
   </div>
{% endblock %}
